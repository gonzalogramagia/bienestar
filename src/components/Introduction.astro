---
import { Image } from "astro:assets";

import { SITE } from "@/siteConfig";

import profilePicture from "@/assets/profile-picture.jpg";
import gymAppImage from "@/assets/entrenar-app.png";
---


<div class="mt-8 pt-4 pb-2">
  <a href="https://youtu.be/DrAClyAk4O8" target="_blank" rel="noopener noreferrer" class="block group">
    <Image
      src={profilePicture}
      alt={SITE.name}
      height={256}
      width={256}
      loading="eager"
      draggable="false"
      class="mx-auto size-32 rounded-full transition-all duration-300 ease-in-out"
    />
    <h1 class="mt-4 text-center text-3xl font-semibold group-hover:text-yellow-500 transition-colors duration-200">{SITE.name}</h1>
  </a>
  <p
    class="mt-1 text-balance text-center text-sm text-lightModeForegroundMuted dark:text-darkModeForegroundMuted"
  >
    {SITE.bio}
  </p>
  
  <!-- Imagen de Gym App -->
  <div class="text-center pt-6">
    <a href="https://entrenar.app" target="_blank" rel="noopener noreferrer" class="block">
      <Image
        src={gymAppImage}
        alt="Gym App"
        height={200}
        width={800}
        loading="lazy"
        draggable="false"
        class="mx-auto w-full rounded-lg border-2 border-gray-300 dark:border-gray-600 shadow-md"
      />
    </a>
  </div>
</div>